idée 1 hugues : 
fonction déplacement de id = "box"
let box = document.getElementById("box");
let position = 0;
let speed = 2;
let direction = 1;

function animate() {
  position += speed * direction;

  if (position > 300 || position < 0) {
    direction *= -1; // rebondir
  }

  box.style.left = position + "px";
  requestAnimationFrame(animate);
}

animate();

